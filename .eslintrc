{
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "$": true,
        "_": true,
        "after": true,
        "afterEach": true,
        "angular": true,
        "before": true,
        "beforeEach": true,
        "browser": true,
        "by": true,
        "describe": true,
        "element": true,
        "expect": true,
        "inject": true,
        "it": true,
        "moment": true,
        "sinon": true,
        "SparkMD5": true
    },
    "rules": {
        "arrow-parens": [2, "as-needed"],
        "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 2 }],
        "quotes": [2, "double"],
        "semi": [2, "always"],
        "object-curly-spacing": [2, "always"],
        "arrow-spacing": [2, { "before": true, "after": true }]
    },
    "parser": "babel-eslint"
}
